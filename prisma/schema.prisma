// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pet {
  id        Int      @id @default(autoincrement())
  nome      String
  especie   String
  dataNascimento DateTime
  descricao String
  status    String   @default("disponivel") // disponivel, adotado
  tamanho   String?  // pequeno, medio, grande
  personalidade String? // calmo, brincalhao, independente
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  adocoes Adocao[]
}

model Adotante {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  telefone  String
  endereco  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  adocoes Adocao[]
}

model Adocao {
  id          Int      @id @default(autoincrement())
  petId       Int
  adotanteId  Int
  dataAdocao  DateTime @default(now())
  observacoes String?

  pet      Pet     @relation(fields: [petId], references: [id], onDelete: Cascade)
  adotante Adotante @relation(fields: [adotanteId], references: [id], onDelete: Cascade)

  @@unique([petId, adotanteId])
}
